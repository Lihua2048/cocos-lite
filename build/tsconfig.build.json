{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "../game/dist",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "**/*",
    "../core/**/*",
    "runtime/**/*"
  ],
  "exclude": [
    "node_modules",
    "../game/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
